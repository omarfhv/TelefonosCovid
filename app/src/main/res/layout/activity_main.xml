<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1932c0"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtsop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="27dp"
        android:text="DIRECTORIO EMERGENCIAS \n COVID-19"
        android:textColor="#FFFFFF"
        android:gravity="center">

    </TextView>

    <ScrollView
        android:layout_below="@+id/txtsop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:orientation="vertical">


    <LinearLayout
        android:layout_below="@+id/txtsop"
        android:id="@+id/btnhospital"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/botonblanco"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/btnhospi"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disponibilidad de Hospitales COVID-19"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/btnhospital"
        android:id="@+id/btnpsicologica"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/botonblanco"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/btnpsico"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ayuda Psicologica"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/btnpsicologica"
        android:id="@+id/btnemergencia"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/botonblanco"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/btnemercovid"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergencia COVID-19"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/btnemergencia"
        android:id="@+id/btnsusana"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/botonblanco"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/sd"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Susana Distancia"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/btnsusana"
            android:id="@+id/btninfopaci"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/botonblanco"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@drawable/btninfo"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informacion del Paciente"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/btninfopaci"
                android:id="@+id/btnlineadirecta"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/botonblanco"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btnlinea"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Linea Directa COVID-19"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/btnlineadirecta"
        android:id="@+id/btndenunciar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/botonblanco"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/btnciudadana"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denuncia Ciudadana"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/btndenunciar"
        android:id="@+id/btnprofeco"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/botonblanco"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/btnprofeco"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denuncia Profeco"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/btnprofeco"
        android:id="@+id/btnquejas"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/botonblanco"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/cor"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUEJAS DEL PERSONAL DE SALUD"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admobmanual" />

</RelativeLayout>