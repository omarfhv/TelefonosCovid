<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93d5f7"
    tools:context=".QuejasTrabajadoresImss">


    <TextView
        android:id="@+id/txtsop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="INFORMACION PACIENTE \n COVID-19"
        android:textColor="#FFFFFF"
        android:gravity="center">

    </TextView>


    <LinearLayout
        android:layout_below="@+id/txtsop"
        android:id="@+id/botonllamadainfo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/botonazulmarino"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/tel"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefono Informacion \n Paciente Covid-19"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:layout_below="@+id/botonllamadainfo"
        android:id="@+id/txtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#FAF8F8"

        android:text="ELEGIR OPCION: \n                                   1\n "

        >

    </TextView>

    <LinearLayout
        android:layout_below="@+id/txtext"
        android:id="@+id/botoncorreoinfo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/botonazulmarino"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/gmail"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Informacion \n Paciente Covid-19"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/admobmanual" />

</RelativeLayout>